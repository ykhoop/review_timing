<% content_for(:title, t('.title')) %>
<section class="section-padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-12 mx-auto">
        <h3 class="title-text text-center"><%= t('.title') %></h3>
        <div class="tab-content shadow-lg">
          <h6 class="mb-3"><%= t('.explanation') %></h6>
          <%= form_with url: password_resets_path, local: true, class:'custom-form mb-5 mb-lg-0', method: :post do |f| %>
            <div class="form-group mb-3">
              <%= f.label t('.email_label') %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="text-center mb-3">
              <%= f.submit t('defaults.send'), class: 'btn btn-default new-btn btn-wide' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
