<% content_for(:title, t('.title')) %>
<section class="section-padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-12 mx-auto">
        <h3 class="title-text text-center"><%= t('.title') %></h3>
        <div class="tab-content shadow-lg">
          <%= form_with url: login_path, local: true do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, User.human_attribute_name(:email), class: 'required' %>
              <%= f.text_field :email, class: 'form-control', placeholder: t('defaults.placeholder.email') %>
            </div>
            <div class="form-group mb-3">
              <%= f.label :password, User.human_attribute_name(:password), class: 'required' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="text-center mb-3">
              <%= f.submit t('defaults.login'), class: 'btn btn-default new-btn btn-wide' %>
            </div>
          <% end %>
          <div class="py-3 d-flex justify-content-between">
            <%= link_to t('.to_register_page'), new_user_path, class: "link-text" %>
            <%= link_to t('.password_forget'), new_password_reset_path, class: 'link-text' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
