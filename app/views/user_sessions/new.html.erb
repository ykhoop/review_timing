<% content_for(:title, t('.title')) %>
<div class='container'>
  <div class='mx-auto' style="width: 400px;">
    <div class='card text-dark bg-light' style='margin-top: 100px;'>
      <div class='card-header text-center fw-bold'><%= t('.title') %></div>
      <div class='card-body'>
        <%= form_with url: login_path, local: true do |f| %>
          <div class='form-group mb-3'>
            <%= f.label :email, User.human_attribute_name(:email) %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class='form-group mb-3'>
            <%= f.label :password, User.human_attribute_name(:password) %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <%= f.submit t('defaults.login'), class: 'btn btn-primary mt-2 mb-3 w-100' %>
        <% end %>
      </div>
      <div class='card-footer py-3 d-flex justify-content-between'>
        <%= link_to t('.to_register_page'), new_user_path %>
        <%= link_to t('.password_forget'), '#' %>
      </div>
    </div>
  </div>
</div>
