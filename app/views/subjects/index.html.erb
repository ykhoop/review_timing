<% content_for(:title, t('.title')) %>
<section class="section-padding">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h3 class="title-text"><%= t('.title') %></h3>
        <div class="table-responsive">
          <table class="schedule-table table bg-light table-hover">
            <thead>
              <tr>
                <th scope="col"><%= t('activerecord.attributes.subject.title') %></th>
                <th scope="col"><%= t('activerecord.attributes.subject.start_at') %></th>
                <th scope="col"><%= t('activerecord.attributes.subject.limit_at') %></th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% if @subjects.present? %>
                <%= render @subjects %>
              <% else %>
                <tr>
                  <td colspan="4" class="text-center"><%= t('.no_subject') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</section>
