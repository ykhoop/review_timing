<% content_for(:title, t('.title')) %>
<div class="container">
  <div class='mx-auto w-50'>
    <div class='card text-dark bg-light' style='margin-top: 50px;'>
      <div class='card-header text-center fw-bold h5 subject-bg-color'><%= t('.title') %></div>
      <div class='card-body'>
        <%= form_with model: @subject, local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="form-group mb-3">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :start_at %>
            <%= f.datetime_field :start_at, class: 'form-control' %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :limit_at %>
            <%= f.datetime_field :limit_at, class: 'form-control' %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :memo %>
            <%= f.text_area :memo, class: 'form-control', rows: 10 %>
          </div>
          <%= f.submit t('defaults.register'), class: 'btn btn-primary mt-2 mb-3 w-100' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
